---
import Layout from "../layouts/Layout.astro";

const myTournaments = [
    // Example tournaments
    {
        id: 1,
        name: "Torneo de Dota 2",
        date: "2023-11-01",
        status: "Activo",
        img: "/games/dota2-card.jpg",
        colorGradient: "from-slate-800 via-red-800 to-slate-900",
    },
    {
        id: 2,
        name: "Campeonato de Fortnite",
        date: "2023-12-15",
        status: "Pr√≥ximo",
        img: "/games/fortnite-card.jpg",
        colorGradient: "from-purple-950 to-blue-950",
    },
    {
        id: 3,
        name: "Liga de Rocket League",
        date: "2024-01-10",
        status: "Finalizado",
        img: "/games/rocket-card.jpg",
        colorGradient: "from-blue-950 to-indigo-950",
    },
];
---

<Layout>
    <div class="flex flex-col items-center mt-20 px-4">
        {/* T√≠tulo Principal */}
        <h1
            class="text-5xl md:text-6xl font-extrabold text-pink-500 text-center mb-12"
        >
            üéÆ Mis Torneos
        </h1>

        {/* Grid de Tarjetas */}
        <section
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 w-full max-w-7xl"
        >
            {
                myTournaments.map((tournament) => (
                    <div
                        class={`group relative flex flex-col justify-between w-full h-[450px] rounded-3xl p-6 bg-gradient-to-br from-blue-950 to-indigo-950 shadow-xl hover:shadow-2xl transition-all duration-300 ease-in-out`}
                    >
                        {/* Imagen del torneo */}
                        <div class="w-full h-[40%] rounded-2xl overflow-hidden bg-black bg-opacity-10 flex justify-center items-center">
                            <img
                                src={tournament.img}
                                alt={tournament.name}
                                class="object-contain max-h-52 transition-transform duration-500 group-hover:scale-105"
                            />
                        </div>

                        {/* Informaci√≥n del torneo */}
                        <main class="flex flex-col justify-between h-[60%] text-white mt-6">
                            <div class="text-center">
                                <h2 class="text-3xl font-extrabold mb-2 tracking-wide">
                                    {tournament.name}
                                </h2>
                                <p class="text-lg font-medium text-gray-100 mb-4">
                                    üóìÔ∏è Fecha:{" "}
                                    <span class="font-semibold text-white">
                                        {tournament.date}
                                    </span>
                                </p>
                            </div>

                            {/* Estado del torneo */}
                            <div class="flex justify-center mt-auto">
                                <span
                                    class={`px-6 py-2 rounded-full text-md font-bold tracking-wide shadow-md
                                        ${
                                            tournament.status === "Activo"
                                                ? "bg-green-500"
                                                : tournament.status ===
                                                    "Pr√≥ximo"
                                                  ? "bg-yellow-400 text-black"
                                                  : "bg-red-500"
                                        }
                                    `}
                                >
                                    {tournament.status}
                                </span>
                            </div>
                        </main>
                    </div>
                ))
            }
        </section>
    </div>
</Layout>
