---
import Layout from "../layouts/Layout.astro";

const myTournaments = [
    // Example tournaments
    {
        id: 1,
        name: "Torneo de Dota 2",
        date: "2023-11-01",
        status: "Activo",
        img : "/games/dota2-card.jpg"
    },
    {
        id: 2,
        name: "Campeonato de Fortnite",
        date: "2023-12-15",
        status: "Próximo",
        img : "/games/fortnite-card.jpg"
    },
    {
        id: 3,
        name: "Liga de Rocket League",
        date: "2024-01-10",
        status: "Finalizado",
        img : "/games/rocket-card.jpg"
    }
];

---

<Layout>
   <div class="flex flex-col justify-center items-center mt-16">
       <h1 class="flex text-8xl font-bold text-pink-500  ">Mis Torneos</h1>
       <section class="flex flex-row items-center justify-center my-8 gap-16 flex-wrap">
            {myTournaments.map(tournament => (
                <div class="relative flex flex-col items-center  justify-center bg-green-400/30 rounded-lg overflow-hidden shadow-lg w-[400px] h-[800px]">
                    <div class="w-full h-1/2 flex items-center justify-center   ">
                    <img src={tournament.img} alt={tournament.name} class="max-h-96 object-cover rounded-lg shadow-lg mb-4" />
                    </div>
                    <main class="px-6 flex flex-col justify-center relative text-white text-center mt-auto bg-red-600 w-full h-1/2 bottom-0 rounded-b-lg">
                        <h2 class="text-4xl font-bold">{tournament.name}</h2>
                        <p class="text-lg">Fecha: {tournament.date}</p> 
                        <p
                            class={`text-lg px-8 py-2 rounded-full font-semibold
                                ${
                                    tournament.status === "Activo"
                                        ? "bg-green-500"
                                        : tournament.status === "Próximo"
                                        ? "bg-yellow-400"
                                        : "bg-red-500"
                                }
                                text-white`}
                        >
                            {tournament.status}
                        </p>
                    </main>
                </div>
            ))}
