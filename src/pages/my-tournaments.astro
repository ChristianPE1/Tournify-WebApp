---
import Layout from "../layouts/Layout.astro";

const myTournaments = [
    // Example tournaments
    {
        id: 1,
        name: "Torneo de Dota 2",
        date: "2023-11-01",
        status: "Activo",
        img : "/games/dota2-card.jpg"
    },
    {
        id: 2,
        name: "Campeonato de Fortnite",
        date: "2023-12-15",
        status: "Pr√≥ximo",
        img : "/games/fortnite-card.jpg"
    },
    {
        id: 3,
        name: "Liga de Rocket League",
        date: "2024-01-10",
        status: "Finalizado",
        img : "/games/rocket-card.jpg"
    }
];

---

<Layout>
   <div>
       <h1 class="text-6xl font-bold text-pink-500">Mis Torneos</h1>
       <section class="flex flex-row items-center justify-center mt-8">
               {myTournaments.map(tournament => (
                   <div class="flex flex-col items-center justify-center p-4 m-4 bg-gray-800 rounded-lg shadow-lg">
                        <img src={tournament.img} alt={tournament.name} class="w-56 h-96 object-cover rounded-lg shadow-lg mb-4" />
                        <h2 class="text-4xl font-bold">{tournament.name}</h2>
                        <p class="text-lg">Fecha: {tournament.date}</p>
                        <p class="text-lg">Estado: {tournament.status}</p>
                   </div>
               ))}
       </section>
   </div>
</Layout>
